{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tim-dickey/duplicate-finding-tool/schema/duplicates.schema.json",
  "title": "Duplicate Finding Tool Output Schema",
  "description": "JSON schema for duplicate finder output (pair or cluster mode)",
  "oneOf": [
    {
      "type": "array",
      "description": "Pair mode output",
      "items": {
        "type": "object",
        "required": ["schema_version", "similarity", "file_a", "file_b", "tokens_a", "tokens_b"],
        "properties": {
          "schema_version": {
            "type": "integer",
            "const": 1
          },
          "similarity": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "file_a": {
            "type": "string"
          },
          "file_b": {
            "type": "string"
          },
          "tokens_a": {
            "type": "integer",
            "minimum": 0
          },
          "tokens_b": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": true
      }
    },
    {
      "type": "object",
      "description": "Cluster mode output",
      "required": ["schema_version", "mode", "threshold", "clusters"],
      "properties": {
        "schema_version": {
          "type": "integer",
          "const": 1
        },
        "mode": {
          "type": "string",
          "const": "clusters"
        },
        "threshold": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "clusters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["representative", "members", "size", "max_similarity"],
            "properties": {
              "representative": {
                "type": "string"
              },
              "members": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              },
              "size": {
                "type": "integer",
                "minimum": 1
              },
              "max_similarity": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 1.0
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  ]
}
